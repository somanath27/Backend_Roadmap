{
  "compilerOptions": {
    "target": "esnext", // Or any other valid target value
    "module": "commonjs",
    "lib": ["esnext"], // Or any other valid lib value
    "allowJs": true,
    "checkJs": false,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.graphql"],
  "exclude": ["node_modules"]
}
